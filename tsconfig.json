{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "rootDir": "./src",
    "jsx": "react",
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "typings/**/*.d.ts",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/*.ts",
    "./node_modules/@types"
  ],
  "exclude": [
    "**/*.js"
  ]
}
